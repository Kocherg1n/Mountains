include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Mountains
  body
    .wrapper
      .welcome-section

        section.promo#promo
          .container.promo__container
            header.header.promo__header
              .promo__logo
                .logo КЮ
              .promo__menu
                - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                ul.nav__list
                  each item in menu
                    li.nav__item
                      a.nav__link #{item}
              .promo__socials
                ul.social__list
                  li.social__item
                    a.social__link(href="#")
                      +icon('insta', 'social__header')
                  li.social__item
                    a.social__link(href="#")
                      +icon('vk', 'social__header')
                  li.social__item
                    a.social__link(href="#")
                      +icon('github', 'social__header')
            .promo__content
              .user-info
                h6.user-info__desc Личный сайт<br>веб разработчика
                h1.user-info__name Кочергин<br>Юрий
            .promo__btn
              .scroll--down
                a.scroll--down__link(href="#about") 
                  p.scroll--down__text Скролл 
                  +icon('scroll', 'scroll__icon') 

        section.about#about
          .container.about__container
            .about__content
              .about__left
                .user
                  .avatar.user__avatar
                    +image("content/user.jpg", "avatar__pic")
                  .user__desc
                    - 
                      var rows = [
                        ['Проживаю', 'Москва'],
                        ['Возраст', '22'],
                        ['Родился', '22.22.2222']
                      ];
                    table.user__data
                      table.user__data-table
                        each row in rows
                          tr.user__data-row
                            each cell in row
                              td #{cell}
              .about__right
                h4.about__prolog Привет меня зовут 
                h2.about__title Кочергин Юрий
                .about__text Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          .triangles
            svg.triangles__item(viewBox="0 0 1000 100" preserveAspectRatio="none")
              polygon(points="0,0 0,100 1000,100")
            svg.triangles__item(viewBox="0 0 1000 100" preserveAspectRatio="none")
              polygon(points="0,100 1000,100 1000,0")
        
        section.benefit#benefit
          .container.benefit__container
            +image("bg/bag.png", "benefit__pic")
            .benefit__desc
              h2.benefit__title-text.title--mod Чем я могу быть полезен вам
              p.benefit__title-subtext Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .benefit__content
              .skills
                h4.skill__title.title--mod Front-end
                ul.skill__list
                  li.skill__item
                    p.skill__item-name HTML5
                  li.skill__item
                    p.skill__item-name CSS4
                  li.skill__item
                    p.skill__item-name Javascript
                  li.skill__item
                    p.skill__item-name.skill__item-name--mod Jquery <br>и Vue.js
                h4.skill__title.title--mod Workflow
                ul.skill__list
                  li.skill__item
                    p.skill__item-name HTML5
                  li.skill__item
                    p.skill__item-name HTML5
                  li.skill__item
                    p.skill__item-name HTML5
                  li.skill__item
                    p.skill__item-name HTML5
                
        include ./templates/work.pug
                
            
              .slider__info
                .slider__info-tags
                  ul.tags__list
                    li.tags__item  
                    li.tags__item
                    li.tags__item
                .slider__info-text
                  h3.slider__info-title
                  p.slider__info-desc



        
        
        
        
        
        
        
        
        
        
        
        //- section.skills#skills
          .container.skills__container
            .skills__title
              .skills__title-text Чем я могу быть полезен вам
              .skills__title-subtext Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .skills__content
              - 
                var skills = [
                  ['frontend', ['html', 'css', 'js']],
                  ['workflow', ['git', 'terminal', 'gulp']],
                ]
              each item in skills 
                li.user-skills__item.skills-row 
                  h3.skills-row__title #{item[0]}
                  ul.skills-row__list
                    each skill in item[1]
                      li.skills-row__item
                        .skill
                          svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
                            circle(r="80" cx="100" cy="100").skill__circle.skill__circle--position--under
                            linear-gradient()
                          .skill__title #{skill}



        
              
        
       
          






                

                

                
          

    



