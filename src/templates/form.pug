form.form(action="http://")
    .form__row
        label.form__label
            .form__input-title Введите ваше имя
            input.form__input(required id="username")
            +icon('user', 'form-user__icon')
        label.form__label
            .form__input-title Введите ваш email
            input.form__input(required d="usermail")
            +icon('envelope', 'form-user__icon')
    .form__row
        label(for="usermessage").form__label
            .form__input-title Сообщение к письму
            textarea.form__textarea(required id="usermessage")
            +icon('message', 'form-mess__icon')
    button.form__btn-submit(type="submit") Отправить