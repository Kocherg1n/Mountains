.reviews {
  padding: 150px 0;
  min-height: 640px;
  position: relative;
  @include m-phones {
    padding-bottom: 20px;
  }
}

.reviews__block {
  display: flex;
  margin-bottom: 96px;
  @include phones {
    flex-direction: column;
    align-items: center;
  }
  @include m-phones {
    flex-direction: column;
    align-items: center;
    margin-bottom: 90px;
  }
}
