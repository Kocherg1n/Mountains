.reviews {
  padding: 150px 0;
  min-height: 640px;
  position: relative;

  @include m-phones {
    padding-bottom: 20px;
  }
  &__container {

    @include tablets {
      position: relative;
  
    }
  }
  &__block {
    display: flex;
  
    @include phones {
      flex-direction: column;
      align-items: center;
    }
    
    @include m-phones {
      flex-direction: column;
      align-items: center;
      margin-bottom: 90px;
    }
  }
}



