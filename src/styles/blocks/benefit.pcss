.benefit {
  min-height: 890px;
  padding-top: 3%;
  position: relative;
}

.benefit__content {
  padding-left: 40%;
}

.benefit__desc {
  width: 40%;
  margin: 0 auto;
  margin-bottom: 80px;
}

.benefit__title-text {
  margin-bottom: 30px;
}

.benefit__title-subtext {
  opacity: 0.5;
  color: #464d62;
  font-family: "Open Sans - Semibold";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
}

.benefit__pic {
  position: absolute;
  left: -3%;
  top: 14%;
}
