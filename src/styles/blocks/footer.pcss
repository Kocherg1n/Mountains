.footer {
  background-color: black;
  color: #fff;
  min-height: 410px;
}

.footer__container {
  display: flex;
}

.footer__social {
  margin-top: 10px;
}

.footer__left {
  width: 34%;
  display: flex;
  margin-top: 100px;
}

.footer__year {
  opacity: 0.1;
  font-size: 48px;
  line-height: 30px;
  margin-right: 60px;
  margin-top: 8px;
}

.footer__info-user {
  font-size: 18px;
  font-weight: 700;
  line-height: 30px;
  text-transform: uppercase;
}

.footer__info-left {
  width: 35%;
  margin-right: 240px;
}

.footer__info-left {
  width: 50%;
  margin-right: 140px;
  width: 69%;
}

.footer__info-text {
  opacity: 0.3;
  font-size: 16px;
  font-weight: 400;
  text-transform: none;
  line-height: 30px;
  margin-top: 32px;
}

.footer__right {
  width: 68%;
}

.footer__nav {
  margin-top: 100px;
}

.footer__info-desc {
  display: flex;
  opacity: 0.3;
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  margin-top: 70px;
}

.footer__text-autor {
  color: #ffffff;
  font-size: 16px;
  font-style: italic;
  line-height: 30px;
  opacity: 1;
  margin-top: 20px;
}
