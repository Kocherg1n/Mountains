.promo {
  height: 100vh;
  width: 100vw;
  min-height: 650px;
}

.promo__btn {
  z-index: 30;
}

.promo__container {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.promo__content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 30;
}

.user-info__desc {
  opacity: 0.4;
  font-size: 18px;
  font-weight: 600;
  line-height: 30px;
}

.user-info__name {
  font-size: 72px;
  font-weight: 800;
  line-height: 80px;
}
