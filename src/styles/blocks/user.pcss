.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user__avatar {
  margin-bottom: 20px;
  display: block;
  width: 200px;
  height: 200%;
  overflow: hidden;
  border-radius: 50%;
}

.user__avatar-pic {
  display: block;
  object-fit: contain;
  width: 100%;
  height: 100%;
}
